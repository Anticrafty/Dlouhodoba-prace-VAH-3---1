<Page x:Class="WandsAndGunsEvolve.NastaveniMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WandsAndGunsEvolve"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="290"
      Background="SaddleBrown"
      Title="NastaveniMenu">

    <Grid>
        <TextBlock Height="47"  TextWrapping="Wrap" Text="Menu" Width="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5" FontSize="36" FontWeight="Bold" Foreground="LightGray"/>
        <StackPanel HorizontalAlignment="Center" Height="150" Margin="0,50,0,0" VerticalAlignment="Top" Width="270">
            <Button Content="Uložení" Foreground="Gray" Background="{x:Null}" Height="40" Margin="5" BorderThickness="5" FontSize="16" FontWeight="Bold" />
            <Button Content="Zpět" Foreground="Gray" Background="{x:Null}" Height="40" Margin="5" BorderThickness="5"  FontSize="16" FontWeight="Bold" Click="Zpet_Click"/>
            <Button Content="Konec" Foreground="Gray" Background="{x:Null}" Height="40" Margin="5 " BorderThickness="5"  FontSize="16" FontWeight="Bold" Click="Konec"/>
        </StackPanel>
    </Grid>
</Page>
