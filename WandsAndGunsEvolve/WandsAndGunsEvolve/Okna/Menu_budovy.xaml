<Page x:Class="WandsAndGunsEvolve.Menu_budovy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WandsAndGunsEvolve"
      mc:Ignorable="d" 
      Background="LightGray"
      d:DesignHeight="450" d:DesignWidth="450"
      Title="Menu_budovy">

    <Grid>
        <Border  BorderBrush="Black" BorderThickness="5" HorizontalAlignment="Left" Height="450"  VerticalAlignment="Top" Width="450">
        </Border>
        <Button x:Name="Stavba" Content="Svavba" HorizontalAlignment="Left" Margin="30,30" VerticalAlignment="Top" Width="100" Height="30" Click="Stavba_Click" />
        <TextBlock x:Name="Stavba_potrba" Text="0 / 0" HorizontalAlignment="Left" Margin="30,65" VerticalAlignment="Top" Width="100" Height="10" FontSize="8" />
        <Button x:Name="Vyvoj" Content="Vývoj" HorizontalAlignment="Left" Margin="30,80" VerticalAlignment="Top" Width="100" Height="30" Click="craft_click"/>
        <Button x:Name="Uceni" Content="Učeni" HorizontalAlignment="Left" Margin="30,120" VerticalAlignment="Top" Width="100" Height="30" Click="craft_click" />
        <Button x:Name="Craft" Content="Crafting" HorizontalAlignment="Left" Margin="30,160" VerticalAlignment="Top" Width="100" Height="30" Click="craft_click" />
        <Button x:Name="Mnozeni" Content="Množení" HorizontalAlignment="Left" Margin="30,200" VerticalAlignment="Top" Width="100" Height="30" Visibility="Collapsed" Click="Mnozeni_Click"/>
        <Button Content="Zpět" HorizontalAlignment="Left" Margin="30,400,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Zpet_Click"/>
        <Border  BorderBrush="Black" BorderThickness="5" HorizontalAlignment="Left" Height="430"  VerticalAlignment="Top" Width="250" Margin="165,10,0,0">

            <ScrollViewer >
                <StackPanel x:Name="pracovnici" Background="White">
                    
                
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
